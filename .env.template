# VOLGUARD v42.2 Environment Configuration
# Copy this file to .env and fill in your credentials

# Upstox API Credentials
UPSTOX_ACCESS_TOKEN=your_access_token_here
UPSTOX_CLIENT_ID=your_client_id_here
UPSTOX_CLIENT_SECRET=your_client_secret_here
UPSTOX_REDIRECT_URI=your_redirect_uri_here
UPSTOX_REFRESH_TOKEN=your_refresh_token_here

# Telegram Notifications
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Capital Management
VG_BASE_CAPITAL=1000000

# Docker Auto-Confirmation (REQUIRED for Docker deployment)
# Set to TRUE to bypass interactive confirmation prompt
VG_AUTO_CONFIRM=TRUE

# System Configuration (Optional - defaults are set)
VG_ENV=PRODUCTION
VG_DB_PATH=/app/data/volguard.db
VG_LOG_DIR=/app/logs
